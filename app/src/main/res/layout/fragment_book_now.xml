<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.BookNowFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="-38dp">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="411dp"
                    android:layout_height="190dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/whatsapp_image_2022_10_15_at_15_55_01" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_height="50dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="30dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Sumit Agarwal"
                    android:textSize="40sp" />

                <TableRow>

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="86dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="50dp"
                        android:text="Plug" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="86dp"
                        android:layout_height="45dp"
                        android:text="Plug" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="86dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="50dp"
                        android:text="Cost" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="86dp"
                        android:layout_height="45dp"
                        android:text="Cost" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="86dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="50dp"
                        android:text="Aminities" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="86dp"
                        android:layout_height="45dp"
                        android:text="Animities" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="180dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="50dp"
                        android:text="Location" />



                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="180dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="50dp"
                        android:text="Phone No." />
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="135dp"
                        android:layout_height="44dp"
                        android:layout_marginStart="50dp"
                        android:text="Start Time" />

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="135dp"
                        android:layout_height="44dp"
                        android:text="End Time" />
                </TableRow>

            </TableLayout>

            <TextView
                android:id="@+id/getDireTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tableLayout"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="15dp"
                android:text="Get Direction:" />

            <ImageButton
                android:id="@+id/imagebuttonDirections"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@+id/tableLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="195dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_baseline_directions_24" />

            <Button
                android:id="@+id/button2"
                android:layout_width="144dp"
                android:layout_height="48dp"
                android:layout_below="@+id/imagebuttonDirections"
                android:layout_centerHorizontal="true"
                android:text="Book Now" />
        </RelativeLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>